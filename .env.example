# ===========================================
# ePortfolio - Environment Template
# ===========================================
# Copy to .env and set values. Never commit .env.

# ----- Environment -----
# Options: local | production
ENVIRONMENT=local

# ----- Django Core -----
SECRET_KEY=your-50-char-random-secret-key-change-in-production
# DEBUG and ALLOWED_HOSTS are set by ENVIRONMENT (local vs production).

# ----- Local overrides (optional) -----
# For local only: extra hosts (comma-separated)
# ALLOWED_HOSTS=localhost,127.0.0.1

# ----- Production: ALLOWED_HOSTS (required when ENVIRONMENT=production) -----
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ----- Database -----
# Local: SQLite is used automatically (no env needed).
# Production: MySQL is used; set the following.

# MySQL (production)
DB_NAME=eportfolio_db
DB_USER=db_user
DB_PASSWORD=secure_password
DB_HOST=localhost
DB_PORT=3306

# ----- Email -----
# Sender address for all outgoing mail (contact/newsletter notifications).
EMAIL_FROM=notify@yourdomain.com

# Local: console backend is used (no SMTP).
# Production: SMTP from env (set below).

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
# Fallback if EMAIL_FROM not set:
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ----- Optional -----
# SITE_URL=https://yourdomain.com
